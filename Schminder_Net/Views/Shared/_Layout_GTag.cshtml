@{
    mApp _mApp = @Model;
    var _pd = _mApp._cPageData;
}

<!-- Google Tag Manager -->
@if (_pd!.pdContent("gtm_id") != null)
{
<script>
    (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','@(_pd!.pdContent("gtm_id"))');
</script>
}
<!-- End Google Tag Manager -->
<!-- Google tag (gtag.js) -->
 @if(_pd!.pdContent("ga_id") != null)
 {
<script async src="https://www.googletagmanager.com/gtag/js?id=@(_pd!.pdContent("ga_id"))"></script>
<script>
    var ga_disable = "@Html.Raw(_mApp.bIsLocal ? "true" : "false")";
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    if (ga_disable === "false") {
        gtag('js', new Date());
        gtag('config', '@(_pd!.pdContent("ga_id"))');
    }
    function gtag_set(cat,label) {
        if (ga_disable === "false") {
            gtag('event', 'click', {
            'event_category': cat,
            'event_label': label,
            'value': 1
            });
        }
    }
</script>
}
