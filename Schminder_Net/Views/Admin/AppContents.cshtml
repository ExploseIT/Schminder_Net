
@using Schminder_Net.ef;

@{
    Layout = "/Views/Shared/_Layout_Admin.cshtml";

    mApp _mApp = @Model;
    var _pd = _mApp._cPageData;

    ViewData["Title"] = "Admin";
}


<h2>App Contents</h2>
<div class="table-responsive small">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">Name</th>
                <th scope="col">Page</th>
                <th scope="col">Value</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><a href="@Url.Content($"~/admin/appcontent/{0}")" class="link-secondary"> <svg class="bi"><use xlink:href="#plus-circle" /></svg></a></td>
                <td>New entry</td>
                <td></td>
                <td></td>
            </tr>
            @foreach (var _pdc in _pd!.pd_contents!)
            {
                <tr>
                    <td><a href="@Url.Content($"~/admin/appcontent/{_pdc.pc_id}")" class="link-secondary"> <svg class="bi"><use xlink:href="#plus-circle" /></svg></a></td>
                    <td>@Html.Raw(_pdc.pc_name)</td>
                    <td>@Html.Raw(_pdc.pd_page)</td>
                    <td>@Html.Raw(_pdc.pc_value)</td>
                </tr>
            }

        </tbody>
    </table>
</div>

